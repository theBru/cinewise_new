<% provide(:title, @title) %>

<div>
	<section>
		<%= gravatar_for @user %>
		<h1><%= @user.name %></h1>
		<%= link_to "view my profile", @user %>
		<b>Posts:</b> <%= @user.posts.count %>
	</section>

	<section>
		<%= render 'shared/stats' %>
		<% if @users.any? %>
			<div>
				<% @users.each do |user| %>
				<%= link_to gravatar_for(user, size: 30), user %>

				<% end %>
			</div>
		<% end %>
	</section>

	<div>
		<h1><%= @head %></h1>
		<% if @users.any? %>
		<ul>
			<%= render @users %>
		</ul>
		<%= will_paginate %>
		<% end %>
	</div>
</div>
